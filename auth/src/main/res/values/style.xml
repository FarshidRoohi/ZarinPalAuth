<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#0044AA</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:editTextColor">#000000</item>


        <item name="android:colorControlNormal" tools:targetApi="lollipop">#FFB74D</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#0044AA</item>
        <item name="android:colorActivatedHighlight">#E65100</item>


        <item name="zp_textAppearance_TextViewAmountBlack">@style/TextViewAmountBlack</item>
        <item name="zp_textAppearance_TextViewBoldGray">@style/TextViewBoldGray</item>
        <item name="zp_textAppearance_TextViewSubtext">@style/TextViewSubtext</item>
        <item name="zp_textAppearance_TextViewSubtextGray">@style/TextViewSubtextGray</item>
        <item name="zp_textAppearance_TextViewTitle">@style/TextViewTitle</item>
        <item name="zp_textAppearance_TextViewTitle14SP">@style/TextViewTitle14SP</item>
        <item name="zp_badge_background">@drawable/holder_curve_gray_shape</item>
        <item name="zp_icon_color">@color/icon_color</item>
        <item name="zp_divider_color">@color/divider_color</item>
        <item name="zp_icon_logo_color">@null</item>
        <item name="zp_progress_color">@color/backgroundColorDark</item>


    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curve_shape</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="TextViewBoldGray" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/zp_color_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewAmountBlack" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/content_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTitle" parent="TextViewAmountBlack">
        <item name="android:textColor">@color/content_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewTitle14SP" parent="TextViewAmountBlack">
        <item name="android:textColor">@color/content_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewSubtext" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/sub_content_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewSubtextGray" parent="TextViewSubtext">
        <item name="android:textColor">@color/sub_content_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>

    </style>


    <!--    ====================================================================================================================================================================================-->

    <!--dark theme.-->

    <style name="MyThemeDark" parent="MyTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#0044AA</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:editTextColor">#000000</item>

        <item name="android:colorControlNormal" tools:targetApi="lollipop">#FFB74D</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#0044AA</item>
        <item name="android:colorActivatedHighlight">#E65100</item>


        <item name="zp_textAppearance_TextViewAmountBlack">@style/TextViewAmountBlackDark</item>
        <item name="zp_textAppearance_TextViewBoldGray">@style/TextViewBoldGrayDark</item>
        <item name="zp_textAppearance_TextViewSubtext">@style/TextViewSubtextDark</item>
        <item name="zp_textAppearance_TextViewSubtextGray">@style/TextViewSubtextGrayDark</item>
        <item name="zp_textAppearance_TextViewTitle">@style/TextViewTitleDark</item>
        <item name="zp_textAppearance_TextViewTitle14SP">@style/TextViewTitle14SPDark</item>
        <item name="zp_badge_background">@drawable/holder_curve_gray_shape_night</item>
        <item name="zp_icon_color">@color/icon_color_dark</item>
        <item name="zp_divider_color">@color/divider_color_dark</item>
        <item name="zp_icon_logo_color">@color/backgroundColorLight</item>
        <item name="zp_progress_color">@color/zp_color_red</item>



    </style>


    <style name="BottomSheetDark" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curve_shape_night</item>
    </style>

    <style name="BaseBottomSheetDialogDark" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDark</item>
    </style>

    <style name="BottomSheetDialogThemeDark" parent="BaseBottomSheetDialogDark" />


    <style name="TextViewBoldGrayDark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/zp_color_gray_dark</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextViewAmountBlackDark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTitleDark" parent="TextViewAmountBlack">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewTitle14SPDark" parent="TextViewAmountBlack">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewSubtextDark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/sub_content_color_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewSubtextGrayDark" parent="TextViewSubtext">
        <item name="android:textColor">@color/sub_content_color_dark</item>
        <item name="android:textSize">12sp</item>
    </style>


    <declare-styleable name="zp_sdk_styleable">
        <attr name="zp_textAppearance_TextViewBoldGray" format="reference" />
        <attr name="zp_textAppearance_TextViewAmountBlack" format="reference" />
        <attr name="zp_textAppearance_TextViewTitle" format="reference" />
        <attr name="zp_textAppearance_TextViewTitle14SP" format="reference" />
        <attr name="zp_textAppearance_TextViewSubtext" format="reference" />
        <attr name="zp_textAppearance_TextViewSubtextGray" format="reference" />
        <attr name="zp_badge_background" format="reference" />
        <attr name="zp_icon_color" format="reference" />
        <attr name="zp_icon_logo_color" format="reference" />
        <attr name="zp_divider_color" format="reference" />
        <attr name="zp_progress_color" format="reference" />
    </declare-styleable>


</resources>
